<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ce22c0c75cefd0a9f8efb50f0e15710e"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Racha Conta"
        android:textStyle="bold"
        android:background="@drawable/edittext"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />


    <EditText
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:inputType="number"
        android:hint="Total Da Compra?"
        android:layout_below="@+id/txt"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/pessoas"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pessoas a pagar?"
        android:layout_below="@+id/total"
        android:padding="8dp"
        android:textStyle="bold"
        android:background="@drawable/edittext"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calcular"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/pessoas"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="100dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/limpar"
        android:background="@drawable/button"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:layout_below="@+id/calcular"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        />





</RelativeLayout>